{{#each posts as |post|}}
  {{#if post.editable}}
    <section data-id="{{post.id}}">
      <h6>Title:</h6>
      <h3 class='title'>
        {{post.title}}
      </h3>
      <h6>Author:</h6>
      <p class='author'>
        {{#if post.author}}
          {{post.author}}
        {{else}}
          Anonymous.
        {{/if}}
      </p>
      <h6>Body:</h6>
      <h3 class='body'>
        {{post.body}}
      </h3>
        {{> remove-post id=post.id}}
        {{> edit-post id=post.id}}
    </section>
  {{/if}}
{{/each}}
