{{#each posts as |post|}}
  {{log post}}
  <section data-id="{{post.id}}">
    <h6>Title:</h6>
    <h3>
      {{post.title}}
    </h3>
    <h6>Author:</h6>
    <p>
      {{#if post.author}}
        {{post.author}}
      {{else}}
        Anonymous.
      {{/if}}
    </p>
      {{> remove-post id=post.id}}
  </section>

{{/each}}
